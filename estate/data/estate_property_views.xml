<?xml version="1.0"?>
<odoo>
<!-- Configuration/Lead & Opportunities/Lost Reasons Menu -->

    <record id="crm_lost_reason_view_form" model="ir.ui.view">
        <field name="name">vista lista test model</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <form string="lista test model" editable="bottom">
                <field name="name"/>
            </form>
        </field>
    </record>

    <record id="crm_lost_reason_view_tree" model="ir.ui.view">
        <field name="name">vista lista test model</field>
        <field name="model">test.model</field>
        <field name="arch" type="xml">
            <tree string="lista test model" editable="bottom">
                <field name="name"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <field name="garage"/>
                <field name="garden"/>
                <field name="garden_area"/>
                <field name="garden_orientation"/>
                <field name="active"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">Test action</field>
        <field name="res_model">test.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    

    <menuitem id="test_menu_root" name="Test">
        <menuitem id="test_first_level_menu" name="First Level">
            <menuitem id="test_model_menu_action" action="test_model_action"/>
        </menuitem>
    </menuitem>
</odoo>